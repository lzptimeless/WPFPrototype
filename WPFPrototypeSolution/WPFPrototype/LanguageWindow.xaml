<Window x:Class="WPFPrototype.LanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tk="clr-namespace:WPFPrototype.Toolkit.Controls;assembly=WPFPrototype.Toolkit"
        xmlns:local="clr-namespace:WPFPrototype"
        mc:Ignorable="d"
        Title="LanguageWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <ComboBox x:Name="Languages"
                      HorizontalAlignment="Left"
                      Width="100"
                      SelectionChanged="Languages_SelectionChanged"></ComboBox>
            <tk:TKTextBlock TextKey="app_name"/>
            <tk:TKTextBlock TextKey="hello" Parameter0="test" Parameter1="haha"/>
            <tk:TKTextBlock TextKey="head4"/>
        </StackPanel>
    </Grid>
</Window>
